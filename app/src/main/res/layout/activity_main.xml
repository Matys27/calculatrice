<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/screen"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:fontFamily="monospace"
        android:gravity="end"
        android:text="0"
        android:textAlignment="viewEnd"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Buttons for digits 1-9 with onClick="addNumber" style="@style/DigitBtnStyle" -->

            <Button
                android:id="@+id/btn1"
                style="@style/DigitBtnStyle"
                android:onClick="addNumber"
                android:text="1" />

            <Button
                android:id="@+id/btn2"
                style="@style/DigitBtnStyle"
                android:onClick="addNumber"
                android:text="2" />

            <Button
                android:id="@+id/btn3"
                style="@style/DigitBtnStyle"
                android:onClick="addNumber"
                android:text="3" />

            <Button
                android:id="@+id/btnPlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="setOperator"
                android:text="+" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn4"
                style="@style/DigitBtnStyle"
                android:onClick="addNumber"
                android:text="4" />

            <Button
                android:id="@+id/btn5"
                style="@style/DigitBtnStyle"
                android:onClick="addNumber"
                android:text="5" />

            <Button
                android:id="@+id/btn6"
                style="@style/DigitBtnStyle"
                android:onClick="addNumber"
                android:text="6" />

            <Button
                android:id="@+id/btnMoins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="setOperator"
                android:text="-" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn7"
                style="@style/DigitBtnStyle"
                android:onClick="addNumber"
                android:text="7" />

            <Button
                android:id="@+id/btn8"
                style="@style/DigitBtnStyle"
                android:onClick="addNumber"
                android:text="8" />

            <Button
                android:id="@+id/btn9"
                style="@style/DigitBtnStyle"
                android:onClick="addNumber"
                android:text="9" />

            <Button
                android:id="@+id/btnFois"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="setOperator"
                android:text="*" />

            <!-- Add other digit buttons similarly -->

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Buttons for operators +, -, *, / with onClick="setOperator" -->

            <Button
                android:id="@+id/btn0"
                style="@style/DigitBtnStyle"
                android:layout_span="3"
                android:onClick="addNumber"
                android:text="0" />


            <Button
                android:id="@+id/btnDiv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="setOperator"
                android:text="/" />

            <!-- Add "=" button with android:layout_span="2" -->

        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/btnReinitialiser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_span="3"
                android:onClick="resetCalculator"
                android:text="RÃ©initialiser" />

            <Button
                android:id="@+id/btnEgal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_span="1"
                android:onClick="compute"
                android:text="=" />

        </TableRow>

    </TableLayout>

</RelativeLayout>
